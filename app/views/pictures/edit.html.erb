<% picedit = params[:id] %>
<form action="http://localhost:3000/update_picture/<%=picedit %>">
  <div>
    <label for="the_caption">Caption:</label>
    <input value = "<%=Picture.find_by({:id => picedit}).caption %>" id="the_caption" type="text" name="caption">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input value = "<%=Picture.find_by({:id => picedit}).source %>" id="image_url" type="text" name="source">
  </div>
  <div>
    <input type="submit" value="Edit Picture">
  </div>
</form>
